<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Edit your listing:</h2>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input value="<%=listing.title%>" name="listing[title]" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid title!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea name="listing[description]" rows="6" cols="28" type="text" 
            class="form-control" required><%=listing.description%></textarea>    
            <div class="invalid-feedback">Please enter short description!</div>
        </div>
        <div class="mb-3">
            <img src="<%=ogImage%>">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image:</label>
            <input name="listing[image]" type="file" class="form-control">
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price:</label>
            <input value="<%=listing.price%>" name="listing[price]" type="number" class="form-control" required>
            <div class="invalid-feedback">Please enter valid price!</div>
        </div>
        <div class="mb-3 col-md-8" >
            <label for="country" class="form-label">Country:</label>
            <input value="<%=listing.country%>" name="listing[country]" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a country name!</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input value="<%=listing.location%>" name="listing[location]" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter a location!</div>
        </div>
        <div class="mb-3">
        <select class="form-select category" aria-label="Default select example" name="listing[category]" required>
            <option selected>Choose a tag for your listing:</option>
            <option value="skiing">skiing</option>
            <option value="boats">boats</option>
            <option value="beach">beach</option>
            <option value="amazing-pools">amazing-pools</option>
            <option value="castles">castles</option>
            <option value="camping">camping</option>
            <option value="arctic">arctic</option>
            <option value="iconic-cities">iconic-cities</option>
            <option value="be-bread">bed-bread</option>
            <option value="trending">trending</option>
                <option value="art">art</option>
                <option value="tropical">tropical</option>
                <option value="new">new</option>
                <option value="towers">towers</option>
                <option value="golf">golf</option>
          </select>
        </div>
        <button class="btn btn-dark mb-3 edit-btn">Edit</button>
    </form>
    </div>
    </div>
</body>
<script src="/js/script.js"></script>